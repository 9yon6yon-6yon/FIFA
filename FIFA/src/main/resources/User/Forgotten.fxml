   <children>
      <Label layoutX="347.0" layoutY="22.0" text="Forgot your password?" textFill="#046307">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Label>
      <ImageView fitHeight="44.0" fitWidth="54.0" layoutX="450.0" layoutY="63.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/black-lock-icon-isolated-on-yellow-background-vector-34875823.jpg" />
         </image>
      </ImageView>
      <Label layoutX="404.0" layoutY="116.0" text="New password">
         <font>
            <Font name="Arial Bold" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="createpassword" layoutX="361.0" layoutY="242.0" prefHeight="27.0" prefWidth="223.0" promptText="create password" />
      <Label fx:id="hidelabel" layoutX="184.0" layoutY="138.0" prefHeight="30.0" prefWidth="209.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
