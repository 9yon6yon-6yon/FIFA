         </font>
      </Button>
      <Label layoutX="14.0" layoutY="9.0" prefHeight="27.0" prefWidth="111.0" text="Back" textFill="GREEN" underline="true">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="emailtxtfield" layoutX="361.0" layoutY="188.0" prefHeight="30.0" prefWidth="223.0" promptText="email" />
      <TextField fx:id="confirmpassword" layoutX="361.0" layoutY="300.0" prefHeight="27.0" prefWidth="223.0" promptText="confirm password" />
   </children>
</AnchorPane>
